{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "sourceMap": true,
    "allowJs": true,
    "noEmit": false
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
